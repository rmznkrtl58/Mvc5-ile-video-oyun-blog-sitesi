@model Mvc5_ile_oyun_blog_sitesi.Models.sınıflar.Class1

@{
    ViewBag.Title = "blogiçerik";
    Layout = "~/Views/Shared/_homelayout.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Blog Details - Active Bootstrap Template</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="~/web/assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/web/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/web/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/web/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/web/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="~/web/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/web/assets/css/main.css" rel="stylesheet">

    <!-- =======================================================
    * Template Name: Active
    * Template URL: https://bootstrapmade.com/active-bootstrap-website-template/
    * Updated: Aug 07 2024 with Bootstrap v5.3.3
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>
<body class="blog-details-page">

    

    <main class="main">

        <!-- Page Title -->
        <!-- End Page Title -->

        <div class="container">
            <div class="row">

                <div class="col-lg-8">

                    @*Bloglar*@
                    <section id="blog-details" class="blog-details section">
                        <div class="container">
                            @foreach (var x in Model.blg)
                            {
                                <article class="article">

                                    <div class="post-img">
                                        <img src="@x.BlogResim" alt="" class="img-fluid">
                                    </div>

                                    <h2 class="title">@x.BlogBaslik</h2>

                                    <div class="meta-top">
                                        <ul>
                                            <li class="d-flex align-items-center"><i class="bi bi-list-task"></i> <a href="#">@x.tbl_kategoriler.KategoriAd</a></li>
                                            <li class="d-flex align-items-center"><i class="bi bi-calendar-check"></i> <a href="#"><time datetime="2020-01-01">@Convert.ToDateTime(x.BlogTarih).ToString("dd/MM/yyyy")</time></a></li>
                                            <li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a href="#">12 Yorum</a></li>
                                        </ul>
                                    </div><!-- End meta top -->

                                    <div class="content">
                                        <p>
                                            @x.BlogAciklama
                                        </p>
                                    </div><!-- End post content -->
                                </article>
                            }
                        </div>
                    </section>

                    @*YORUMLAR*@
                    <section id="blog-comments" class="blog-comments section">

                        <div class="container">

                            <h4 class="comments-count">Yorumlar</h4>

                            <div id="comment-1" class="comment">
                                @foreach (var x in Model.yrm)
                                {
                                    <div class="d-flex">
                                        <div class="comment-img">
                                            <img src="~/avatar/boy.png" />
                                        </div>
                                        <div>
                                            <h5><a href="">@x.AdSoyad</a> <a href="#" class="reply"><i class="bi bi-reply-fill"></i>Bloga Dön</a></h5>
                                            <time datetime="2020-01-01">Tarih: @Convert.ToDateTime(x.YTarih).ToShortDateString()</time>
                                            <p>
                                                @x.Yorum
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>


                        </div>

                    </section>



                    @*YORUM YAPILAN YER*@
                 @Html.Action("partial1","bloglar")

                </div>



                @*SİDE BAR*@
                <div class="col-lg-4 sidebar">

                    <div class="widgets-container">

                        <!-- Blog Author Widget -->
                        <div class="blog-author-widget widget-item">

                            <div class="d-flex flex-column align-items-center">
                                <img src="assets/img/blog/blog-author.jpg" class="rounded-circle flex-shrink-0" alt="">
                                <h4>Ramazan Kartal</h4>
                                <div class="social-links">
                                    <a href="https://x.com/rkrtl58"><i class="bi bi-twitter-x"></i></a>
                                    <a href="https://github.com/rmznkrtl58"><i class="bi bi-github"></i></a>
                                    <a href="https://www.instagram.com/rkrtl58/"><i class="biu bi-instagram"></i></a>
                                    <a href="https://www.linkedin.com/in/ramazan-kartal-76919821a/"><i class="biu bi-linkedin"></i></a>
                                </div>

                                <p>
                                    Ben bir web backand geliştiriciyim.Asp.Net Mvc ve Core teknolojileriyle ilgili sürekli bilgi edinip gelişim sağlıyorum ve Web sitelerini geliştirmeyi seviyorum.
                                </p>

                            </div>
                        </div><!--/Blog Author Widget -->
                       
                        <div class="recent-posts-widget widget-item">

                            <h3 class="widget-title">Son Yorumlar</h3>
                           @foreach(var x in Model.yrm2) {
                        <div class="post-item">
                            <h4><a href="/bloglar/blogiçerik/@x.Blog">@x.Yorum</a></h4>
                            <time datetime="2020-01-01">Oyun: @x.tbl_bloglar.BlogBaslik</time>
                            <time datetime="2020-01-01">Eklenme Tarihi: @Convert.ToDateTime(x.YTarih).ToShortDateString()</time>

                        </div><!-- End recent post item-->
                           }
                          
                        </div>
                       
                        <div class="tags-widget widget-item">

                            <h3 class="widget-title">Tags</h3>
                            <ul>
                                <li><a href="#">Game</a></li>
                                <li><a href="#">Story Game</a></li>
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Triple A</a></li>
                                <li><a href="#">Souls-Like</a></li>
                                <li><a href="#">Rpg</a></li>
                                <li><a href="#">Open World</a></li>
                                <li><a href="#">Hack & Slash</a></li>
                                <li><a href="#">Horror</a></li>
                                <li><a href="#">Adventure</a></li>
                                <li><a href="#">Spor</a></li>
                                <li><a href="#">Racing</a></li>

                            </ul>

                        </div><!--/Tags Widget -->

                    </div>

                </div>

            </div>
        </div>

    </main>

    

  

    <!-- Vendor JS Files -->
    <script src="~/web/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <script src="~/web/assets/vendor/aos/aos.js"></script>
    <script src="~/web/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/web/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/web/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/web/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/web/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>

    <!-- Main JS File -->
    <script src="~/web/assets/js/main.js"></script>

</body>
